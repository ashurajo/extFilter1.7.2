{
  "manifest_version": 2,
  "name": "合金H5播放器",
  "description": "M3U8、MP4本地H5播放器：去框架、去Flash播放",
  "version": "1.2.0",
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "exclude_matches": [
		"http://*.163.com/*",
		"https://*.163.com/*",
		"https://www.yasehezi.com/*",
		"https://z1.m1907.cn/*",
		"http://www.yatu.tv/*",
		"http://*.cctv.com/*"
	  ],
      "all_frames": false,
	  "css": [
		"lib/DPlayer.min.css",
		"player-fix.css"
	  ],
      "js": [
        "lib/hls.min.js",
        "lib/DPlayer.min.js",
        "m3u8.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [ "background.js" ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "<all_urls>"
    ,"tabs"
    ,"webRequest"
    ,"webNavigation"
    ,"webRequestBlocking"
  ],
  "icons": {
    "48": "icon.png"
  },
  "minimum_chrome_version": "60.0"
}